<div class="nested-fields quantities-fields row">
  <div class="col-xs-5">
    <%= f.association :ingredient, collection: Ingredient.all, prompt: 'Choose an ingredient', input_html: { class: 'ingredient-dropdown' } %>
  </div>
  <div class="col-xs-5">
    <%=  f.input :quantity %>
  </div>
  <div class="col-xs-2">
    <%= link_to_remove_association "x", f, class: 'btn btn-danger' %>
  </div>
</div>
