<div class="col-xs-12 col-sm-6 col-lg-4 index-card">
  <%= link_to recipe_path(recipe) do %>
    <div class="card" style="background-image: url('<%= cl_image_path(recipe.photo? ? recipe.photo : 'https://kitt.lewagon.com/placeholder/cities/shanghai') %>');">
      <div class="card-gradient">
        <div class="card-category">
          <%= recipe.name %>
        </div>
        <div class="card-info">
          <div class="card-servings">
            <%= image_tag('Larder-icon-servings.svg', size: "20x20", alt: "Servings", class: "cut") %> <%= recipe.servings %> servings
          </div>
          <div class="card-duration">
            <%= image_tag('Larder-icon-duration.svg', size: "20x20", alt: "Duration") %><%= recipe.duration %> min
          </div>

        </div>
        <% if recipe.favourited?(user) %>
          <div class="card-favourite">
            <%= image_tag('full-star.png', size: "30x30", alt: "Favourite") %>
          </div>
        <% else %>
          <div class="card-favourite">
            <%= image_tag('empty-star.png', size: "30x30", alt: "Favourite") %>
          </div>
        <% end %>
      </div>
    </div>
  <% end %>
</div>

