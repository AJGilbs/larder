<div class="text-center">
  <%= form_tag recipes_path, method: "get" do %>
    <%=text_field_tag 'search', @search, placeholder: 'Enter new search term...' %>
    <%= submit_tag :submit, class: 'btn btn-primary' %>
  <% end %>
</div>
