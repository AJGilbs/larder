<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url(<%= asset_path('Larder-banner') %>);">
  <div class="banner-content">
    <h1>Larder</h1>
    <h3>Eat more. Waste Less</h3>
    <p>What ingredients do you have?</p>
    <div class="container">
      <div class="row">
        <div class="col-xs-12">
          <%= form_tag(recipes_path, method: :get, :class => 'form-inline') do %>
            <%= text_field_tag :search, nil, class: 'form-control search-style', placeholder: 'Search by ingredient...' %>
            <%= button_tag(type: "submit", class: "btn btn-primary search-button") do %>
              <i class="fa fa-search"></i>
          <% end %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>



